<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_background_recycler"></ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_to_show"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_circular_image"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1F1C39"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/category"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="145dp"
        android:textAlignment="center"
        android:textColor="#1F1C39"
        android:textStyle="italic"
        android:textSize="13dp"></TextView>

    <TextView
        android:id="@+id/city"
        android:layout_width="150dp"
        android:layout_height="34dp"

        android:layout_marginLeft="175dp"
        android:layout_marginTop="155dp"
        android:textAlignment="center"
        android:textColor="#1F1C39"
        android:textSize="13dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/targetamount"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#DC143C"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/status"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1F1C39"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>